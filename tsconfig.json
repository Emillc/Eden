{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@@/*": ["../*"],
      "@assets/*": ["assets/*"],
      "@config": ["config.ts"],
      "@utils": ["utils/index.ts"],
      "@components/*": ["components/*"],
      "@content/*": ["content/*"],
      "@layouts/*": ["layouts/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
