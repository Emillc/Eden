---
import { common, socialLinks } from '@/config'
import { Icon } from 'astro-icon/components'

const { author } = common
const year = new Date().getFullYear()
---

<footer class="text flex-1 transition-colors-300">
  <div class="mxa max-w-4xl flex flex-row flex-wrap justify-between gap-4 px-5 pt-10">
    <div>
      <p>&copy; {year} | {author}</p>
    </div>
    <nav class="social-links block">
      <p class="mb-2"><strong>Social</strong></p>
      <ul class="subtext0 transition-colors-300">
        {
          socialLinks.map(item => (
            <li class="flex items-center gap-1">
              <a href={item.url} target="_blank" class="flex flex-row">
                <Icon name={item.icon} size="2rem" />
                <p>{item.name}</p>
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
    <div>
      <p>
        <a href="/policy"> Privacy Policy </a>
      </p>
      <p>
        <a href="/colophon"> Colophon </a>
      </p>
    </div>
  </div>
</footer>
